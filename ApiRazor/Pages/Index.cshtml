@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center container">
    @* <h1 class="display-4">News</h1> *@
    <table class="table table-striped table-bordered table-hover shadow">
        <thead>
        <th>Id</th>
        <th>Message</th>
        <th>Published</th>
        <th>Country</th>
        <th>Action</th>
        </thead>
        <tbody>
            @foreach (var item in @Model.KrisInfo)
                {
            <tr>
                <td>@item.Identifier</td>
                <td>@item.PushMessage</td>
                <td>@item.Published.ToShortDateString()</td>
                <td>@if(item.Area.Any()){@item.Area.FirstOrDefault().Description}</td>
                <td><a class="btn btn-success" asp-page="/Details" asp-route-id="@item.Identifier">View</a></td>
            </tr>
            }
        </tbody>
    </table>
</div>